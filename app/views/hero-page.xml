<?xml version="1.0" encoding="utf-8"?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="MathMaster" class="bg-indigo-600 text-white" />
    
    <ScrollView>
        <StackLayout class="p-4">
            <!-- App Logo -->
            <Image src="~/assets/logo.png" class="h-32 w-32 self-center" />
            <Label text="MathMaster" class="hero-title text-center" />
            
            <!-- Topic Buttons -->
            <GridLayout rows="auto, auto, auto" columns="*, *" class="mt-4">
                <!-- Math Topics -->
                <Button text="Algebra" tap="{{ onTopicTap }}" row="0" col="0" class="topic-btn topic-btn-algebra" />
                <Button text="Arithmetic" tap="{{ onTopicTap }}" row="0" col="1" class="topic-btn topic-btn-arithmetic" />
                <Button text="Geometry" tap="{{ onTopicTap }}" row="1" col="0" class="topic-btn topic-btn-geometry" />
                <Button text="Probability" tap="{{ onTopicTap }}" row="1" col="1" class="topic-btn topic-btn-probability" />
                <Button text="Statistics" tap="{{ onTopicTap }}" row="2" col="0" class="topic-btn topic-btn-statistics" />
            </GridLayout>
            
            <!-- Game Modes -->
            <StackLayout class="mt-4">
                <Button text="Daily Challenge" tap="{{ onDailyChallengeTap }}" class="game-btn" />
                <Button text="Game Mode" tap="{{ onGameModeTap }}" class="game-btn" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>